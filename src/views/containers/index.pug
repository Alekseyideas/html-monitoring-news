extends ../layouts/base
block content
  main
    section
      .container
        .row
          .col-sm-9.col-md-7.col-lg-5.mx-auto
            .card.card-signin.my-5
              .card-body
                h5.card-title.text-center Увійти
                form(action='/home.html').form-signin
                  .form-label-group
                    input#inputEmail.form-control(type='email' placeholder='Логін' required autofocus)
                    label(for='inputEmail') Логін
                  .form-label-group
                    input#inputPassword.form-control(type='password' placeholder='Пароль' required)
                    label(for='inputPassword') Пароль
                  .custom-control.custom-checkbox.mb-3
                    input#customCheck1.custom-control-input(type='checkbox')
                    label.custom-control-label(for='customCheck1') Запам'ятати
                  button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type='submit') Увійти
